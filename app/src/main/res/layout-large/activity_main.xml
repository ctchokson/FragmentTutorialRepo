<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.owner.fragmentlayoutrepo.MainActivity">


    <fragment
        android:id="@+id/fragmentlist"
        android:name="com.example.owner.fragmentlayoutrepo.FragmentList"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="45" />

    <fragment
        android:id="@+id/fragmentimage"
        android:name="com.example.owner.fragmentlayoutrepo.FragmentImage"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="55" />
</LinearLayout>
